#include<iostream>
#include<ctime>
using namespace std;
int main(){
	srand (time(0));
	int a,n = rand() % 100 + 1; 
		cout<<"choose any number between 0 to 100 "<<endl;
		do
		{
		cout<<"guess the number";
		cin>>a;
		if(a==n){
			cout<<" yahooo! Number is absolutely correct  "<<endl;
		}	
		else if(a>n){
			cout<<" Oops! Number is high "<<endl;
		}
		else if(a<n){
			cout<<" Oops! Number is low "<<endl;
		}
        
		}
		while(a!=n);
	    cout<<"yahoooo! you guessed it right"<<endl;	
	
	return 0;
}
