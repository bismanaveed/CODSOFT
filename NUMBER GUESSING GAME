#include<iostream>
#include<ctime>
using namespace std;
int main(){
	srand (time(0));
	int a,n = rand() % 100 + 1; 
		cout<<"choose any number between 0 to 100 "<<endl;

		 while (true) {
        cout << "Guess the number (between 1 and 100): ";
        cin >> a;

		if(a==n){
			cout<<" you guessed it right "<<endl;
		}
		else if(a>n){
			cout<<" Oops! Number is high "<<endl;
		}
		else if(a<n){
			cout<<" Oops! Number is low "<<endl;
		}
        else{
            cout<<"try again";
        }
		}
	
	
	return 0;
}
